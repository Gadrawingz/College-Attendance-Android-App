<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".users.StaffMenus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/contentBodyColor">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

        <LinearLayout
                android:id="@+id/layout999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:gravity="center|center_horizontal"
                android:background="@drawable/main_back"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/backToDash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/backarrow"
                    android:layout_centerVertical="true"
                    android:tint="#000000" />

            <TextView
                    android:id="@+id/dashboard_header"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/ic_more"
                    android:drawablePadding="4dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="#3F3E3E"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:gravity="end|right"/>
        </LinearLayout>

        <!-- Menu DAS -->
        <LinearLayout
                android:id="@+id/layoutDas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Department -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Departments"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_notifications"
                    android:id="@+id/add_department"
                    android:text="@string/add_department"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_password"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_departs"
                    android:text="View all"/>

            <!-- Classrooms -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Classrooms"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_profile"
                    android:id="@+id/add_classroom"
                    android:text="Add class"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_languages"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_classes"
                    android:text="View classes"/>


            <!-- Staff members -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Staff Members"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_profile"
                    android:id="@+id/add_staff"
                    android:text="Register new"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_languages"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_staff"
                    android:text="View staffs"/>

            <!-- Modules -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Modules (courses)"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_profile"
                    android:id="@+id/add_module"
                    android:text="Register new"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_languages"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_module"
                    android:text="View modules"/>

            <!-- Student section -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Students"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_profile"
                    android:id="@+id/add_student"
                    android:text="Register new"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_password"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_students"
                    android:text="View students"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layoutHod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/viewParent.headerText"
                    android:id="@+id/dashboard_header_hod"/>

            <!-- Department -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Departments"/>

            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_password"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_departs_hod"
                    android:text="View all"/>

            <!-- Classrooms -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Classrooms"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_languages"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_classes_hod"
                    android:text="View classes"/>

            <!-- Student section -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Students"/>
            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_password"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view_students_hod"
                    android:text="View students"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/layoutDoq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    style="@style/viewParent.headerText"
                    android:id="@+id/dashboard_header_lecturer"/>

            <!-- Department -->
            <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Attendance"/>

            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_edit_password"
                    android:layout_marginTop="10dp"
                    android:id="@+id/att_modules"
                    android:text="View all"/>

        </LinearLayout>

    <!-- Lecturer Shit -->
    <LinearLayout
            android:id="@+id/layoutLecturer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <LinearLayout
                android:id="@+id/layoutLecturerS1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_black4"
                android:padding="3dp"
                android:weightSum="2">

            <androidx.cardview.widget.CardView
                    android:id="@+id/lecturerCard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:clickable="true"
                    android:elevation="12dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/image_view21"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_password"
                            app:layout_constraintBottom_toTopOf="@+id/textView21"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/textView21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="LECTURER"
                            android:textAllCaps="true"
                            android:textColor="@color/greenDarker"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_view21" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/doqCard"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"
                    android:elevation="12dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/image_view22"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_password"
                            app:layout_constraintBottom_toTopOf="@+id/textView22"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/textView22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="D.O.Q"
                            android:textAllCaps="true"
                            android:textColor="@color/greenDarker"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_view22" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/layoutLecturerS2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_black4"
                android:padding="3dp"
                android:weightSum="2">

            <androidx.cardview.widget.CardView
                    android:id="@+id/lecturerCard2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:clickable="true"
                    android:elevation="12dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/image_view21b"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_password"
                            app:layout_constraintBottom_toTopOf="@+id/textView21b"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/textView21b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="LECTURER"
                            android:textAllCaps="true"
                            android:textColor="@color/greenDarker"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_view21b" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:id="@+id/doqCard2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:clickable="true"
                    android:elevation="12dp"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <ImageView
                            android:id="@+id/image_view22b"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_password"
                            app:layout_constraintBottom_toTopOf="@+id/textView22b"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                            android:id="@+id/textView22b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="D.O.Q"
                            android:textAllCaps="true"
                            android:textColor="@color/greenDarker"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/image_view22b" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>



        <!-- More stuffs -->
        <TextView
                style="@style/viewParent.headerText.settingsMiniTitle"
                android:text="More..."/>
        <TextView
                style="@style/viewParent.headerText.settingsTextIcon"
                android:drawableLeft="@drawable/ic_notifications"
                android:id="@+id/tvGeneralLogout"
                android:text="Logout now"/>

    </LinearLayout>
</ScrollView>