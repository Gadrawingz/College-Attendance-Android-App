<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".users.DashboardDoq"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

    <LinearLayout
            android:paddingTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:background="@drawable/gradient_bluish">



        <LinearLayout
                android:id="@+id/layout999"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="5dp"
                android:gravity="center|center_horizontal"
                android:background="@drawable/border_green"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/backToDash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu_blue"
                    android:layout_centerVertical="true"
                    android:tint="#000000"/>

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="9dp"
                    android:id="@+id/topDHeader"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/start_blue"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>

            <TextView
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:drawableRight="@drawable/backarrow"
                    android:drawablePadding="4dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="#3F3E3E"
                    android:textSize="18sp"
                    android:fontFamily="@font/baloo2_semibold"
                    android:gravity="end|right"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/lectLayoutTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Lecturer top bar -->
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tvCurrentDate"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="18dp"/>

            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_view_add_check"
                    android:layout_marginTop="10dp"
                    android:id="@+id/manageActs"
                    android:textColor="@color/blueShit4"
                    android:textSize="20dp"
                    android:text="Manage"/>

            <TextView
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_profile"
                    android:layout_marginTop="10dp"
                    android:id="@+id/goToProfile"
                    android:textColor="@color/blueShit4"
                    android:textSize="20dp"
                    android:text="View profile"/>

        </LinearLayout>

        <!-- Inner shit (vertical) -->
        <LinearLayout
                android:id="@+id/linearLayoutInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:background="@drawable/border_blue1"
                android:orientation="vertical"
                android:weightSum="2">

            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_margin="9dp"
                    android:id="@+id/boxInHeader"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_horizontal"
                    android:layout_marginBottom="20dp"/>

            <!-- Section One -->
            <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <!-- Card One -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardOne"
                        android:layout_width="135dp"
                        android:layout_height="90dp"
                        android:layout_margin="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:background="@color/cardColor1"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/card1UpperFirst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@+id/card1LowerFirst"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/cardTextColor1"
                                android:textStyle="bold|normal"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                                android:id="@+id/card1LowerFirst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/cardTextColor2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/card1UpperFirst"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <!-- Card Two -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardTwo"
                        android:layout_width="135dp"
                        android:layout_height="90dp"
                        android:layout_margin="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:background="@color/cardColor1"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/card2UpperFirst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@+id/card2LowerFirst"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/cardTextColor1"
                                android:textStyle="bold|normal"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                                android:id="@+id/card2LowerFirst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/cardTextColor2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/card2UpperFirst"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <!-- Section Two -->
            <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="2">

                <!-- Card One -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardThree"
                        android:layout_width="135dp"
                        android:layout_height="90dp"
                        android:layout_margin="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:background="@color/cardColor1"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/card3UpperFirst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@+id/card3LowerFirst"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/cardTextColor1"
                                android:textStyle="bold|normal"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                                android:id="@+id/card3LowerFirst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/cardTextColor2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/card3UpperFirst"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <!-- Card Two -->
                <androidx.cardview.widget.CardView
                        android:id="@+id/cardFour"
                        android:layout_width="135dp"
                        android:layout_height="90dp"
                        android:layout_margin="6dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:clickable="true"
                        android:elevation="12dp"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        app:cardCornerRadius="8dp" tools:targetApi="lollipop">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:background="@color/cardColor1"
                            android:layout_height="match_parent">

                        <TextView
                                android:id="@+id/card4UpperFirst"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toTopOf="@+id/card4LowerFirst"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/cardTextColor1"
                                android:textStyle="bold|normal"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                                android:id="@+id/card4LowerFirst"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="5dp"
                                android:textColor="@color/cardTextColor2"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/card4UpperFirst"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>