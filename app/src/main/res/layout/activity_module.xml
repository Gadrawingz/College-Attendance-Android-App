<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".module.ModuleActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:background="@drawable/border_green"
            android:layout_margin="5dp"
            android:padding="16dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:text="Register module(course)"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="center_horizontal"/>

        <EditText
                android:id="@+id/editModuleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Maths" />

        <EditText
                android:id="@+id/editModuleCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ICT300" />


        <!-- Select lecturer -->
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="6dp"
                android:text="Select lecturer" />

        <Spinner
                android:id="@+id/spinnerLecturer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/real_spinner"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="12dp"
                android:spinnerMode="dropdown"/>

        <Button
                android:id="@+id/buttonSave"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:padding="6dp"
                android:text="Save" />

        <ProgressBar android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:visibility="gone"
                     android:id="@+id/dataLoading"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_blue1"
                android:layout_marginTop="25dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">

            <TextView
                    android:id="@+id/tvViewModules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluish400"
                    android:padding="10dp"
                    android:text="View"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvExitModules"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/reddish280"
                    android:padding="10dp"
                    android:layout_marginLeft="38dp"
                    android:text="Exit"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>