<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              tools:context=".department.DepartmentViewAll">

    <TextView
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:id="@+id/mainTitle"
            android:textSize="18sp"
            android:textStyle="bold"
        android:text="Departments"
        android:drawableLeft="@drawable/backarrow"
        android:drawableTint="@color/white"
            android:background="@color/start_blue"
            android:textColor="@color/white"
            android:padding="8dp"
            android:gravity="center_horizontal"/>

    <ListView
            android:id="@+id/listViewDepartments"
            android:layout_width="match_parent"
            android:background="@drawable/border_blue1"
            android:layout_height="wrap_content"/>

    <ProgressBar android:layout_width="11dp"
                 android:layout_height="8dp"
                 android:layout_gravity="center_horizontal"
                 android:visibility="gone"
                 android:id="@+id/loadingProgBar"/>

</LinearLayout>